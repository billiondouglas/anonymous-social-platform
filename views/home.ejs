<% /* ================================
     Home Page View
     - Uses default layout set in server (layouts/main.ejs)
     - This file contains ONLY the page-specific content
     - Variables like title, bodyClass, and pageWrapperClass are set here
   ================================ */ %>
<% var title = 'Tweaker - Homepage' %> <% /* Page title for <title> tag in layout */ %>
<% bodyClass = '' %> <% /* Optional body class for page-specific styling */ %>
<% pageWrapperClass = 'home-page' %> <% /* Wrapper class for main container */ %>

<% /* -------- Flash Messages Section -------- */ %>
<!-- Flash messages -->
<% if (success && success.trim() !== "") { %>
  <div class="flash-message success"><%= success %></div>
<% } %>
<% if (error && error.trim() !== "") { %>
  <div class="flash-message error"><%= error %></div>
<% } %>

<% /* -------- Search Bar Section -------- */ %>
<!-- Search -->
<div class="liquid-glass-wrapper">
  <div class="search-container">
    <i class="fa-solid fa-search"></i>
    <input type="text" class="search-bar" placeholder="Search..." aria-label="Search tweets" />
  </div>
</div>

<% /* -------- Tweet Composer Section -------- */ %>
<!-- Composer -->
<section class="tweet-box">
  <textarea id="tweetText" placeholder="Say something..." maxlength="280"></textarea>
  <button id="postTweet" type="button">Post</button>
</section>

<% /* -------- Tweet Feed Section -------- */ %>
<!-- Feed -->
<section id="tweetFeed" class="tweet-feed">
  <div id="tweetTemplate" class="tweet tweet--template" hidden aria-hidden="true" data-template="true">
    <div class="tweet-header-line">
      <a class="tweet-username" href="#" data-username=""></a>
      <span class="dot"></span>
      <time class="tweet-time" datetime=""></time>
    </div>
    <p class="tweet-text"></p>
    <div class="tweet-actions">
      <button title="Comment"><i class="fa-regular fa-comment"></i></button>
      <button title="Retweet"><i class="fa-solid fa-retweet"></i></button>
     <button class="like-btn" data-tweet-id=""><i class="fa-regular fa-heart"> <span class="like-count">0</span></i></button>
    </div>
  </div>
</section>
