<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tweaker - Homepage</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="/scripts/scripts.js" defer></script>
  </head>
  <body>
    <div class="home-page">
      <% if (success) { %>
      <div class="flash-message success"><%= success %></div>
      <% } %> <% if (error) { %>
      <div class="flash-message error"><%= error %></div>
      <% } %>
      <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
          <h1 class="logo">Tweaker</h1>
          <nav>
            <ul>
              <li>
                <a href="#"><i class="fa-solid fa-user"></i> Profile</a>
              </li>
              <li>
                <a href="#" class="active"
                  ><i class="fa-solid fa-house"></i> Home</a
                >
              </li>
              <li>
                <a href="#"><i class="fa-solid fa-rss"></i> Feed</a>
              </li>
              <li>
                <a href="#"><i class="fa-solid fa-gear"></i> Settings</a>
              </li>
              <li>
                <a href="/logout"
                  ><i class="fa-solid fa-right-from-bracket"></i> Log out</a
                >
              </li>
            </ul>
          </nav>
        </aside>

        <!-- Main Feed -->
        <main class="feed">
          <!-- Welcome Banner -->
          <section class="welcome-banner">
            <h2>Welcome, <%= username %>!</h2>
          </section>
          <!-- Tweet Form -->
          <section class="tweet-box">
            <textarea
              placeholder="What's on your mind? speak freely!"
              maxlength="360"
            ></textarea>
            <button id="postTweet">Post</button>
          </section>

          <!-- Tweets Feed -->
          <section id="tweetFeed" class="tweet-feed">
            <!-- Tweets will be rendered here dynamically -->
            <div class="tweet">
              <!-- Username + timestamp -->
              <div class="tweet-header-line">
                <span class="tweet-username">@username</span>
                <span class="dot">¬∑</span>
                <span class="tweet-time">2h</span>
              </div>

              <!-- Tweet text -->
              <p class="tweet-text">This is a sample tweet on Tweaker!</p>

              <!-- Actions row -->
              <div class="tweet-actions">
                <button title="Comment">üí¨ 0</button>
                <button title="Retweet">üîÅ 0</button>
                <button title="Like">‚ù§Ô∏è 0</button>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>
  </body>
</html>
