<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tweaker - Homepage</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="/scripts/scripts.js" defer></script>
  </head>
  <body>
    <!-- Main container for the homepage -->
    <div class="home-page">
      <!-- EJS conditional: Display success flash message if it exists and is not empty -->
      <% if (success && success.trim() !== "") { %>
      <!-- Success message container -->
      <div class="flash-message success"><%= success %></div>
      <% } %>
      <!-- EJS conditional: Display error flash message if it exists and is not empty -->
      <% if (error && error.trim() !== "") { %>
      <!-- Error message container -->
      <div class="flash-message error"><%= error %></div>
      <% } %>
      <!-- Container that holds sidebar and main content feed -->
      <div class="app-container">
        <!-- Sidebar navigation panel -->
        <aside class="sidebar">
          <!-- Application logo/title -->
          <h1 class="logo">Tweaker</h1>
          <nav>
            <ul>
              <!-- Profile navigation item with user icon -->
              <li>
                <a href="#"><i class="fa-solid fa-user"></i> Profile</a>
              </li>
              <!-- Home navigation item with house icon -->
              <li>
                <a href="#"><i class="fa-solid fa-house"></i> Home</a>
              </li>
              <!-- Feed navigation item with RSS icon -->
              <li>
                <a href="#"><i class="fa-solid fa-rss"></i> Feed</a>
              </li>
              <!-- Settings navigation item with gear icon -->
              <li>
                <a href="#"><i class="fa-solid fa-gear"></i> Settings</a>
              </li>
              <!-- Logout navigation item with logout icon -->
              <li>
                <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Log out</a>
              </li>
            </ul>
          </nav>
        </aside>
        <!-- Vertical line separating sidebar from main feed -->
        <div class="right-vertical-line"></div>
        <!-- Main content area displaying the tweet feed -->
        <main class="feed">
          <!-- Wrapper providing a visually styled container with a "liquid glass" effect -->
          <div class="liquid-glass-wrapper">
            <!-- Search bar container with search icon and input -->
              <div class="search-container">
                  <i class="fa-solid fa-search"></i>
                  <input type="text" class="search-bar" placeholder="Search..." />
                </div>
          </div>
          <!-- Section containing the form for posting new tweets -->
          <section class="tweet-box">
            <!-- Textarea for user to input tweet content, limited to 280 characters -->
            <textarea placeholder="Say something..." maxlength="280"></textarea>
            <!-- Button to submit/post the tweet -->
            <button id="postTweet">Post</button>
          </section>

          <!-- Section that dynamically displays the list of tweets -->
          <section id="tweetFeed" class="tweet-feed">
            <!-- Individual tweet container template -->
            <div class="tweet">
              <!-- Header line showing username and timestamp -->
              <div class="tweet-header-line">
                <span class="tweet-username"></span>
                <span class="dot"></span>
                <span class="tweet-time"></span>
              </div>

              <!-- Paragraph displaying the tweet's text content -->
              <p class="tweet-text"></p>

              <!-- Row of action buttons for interacting with the tweet -->
              <div class="tweet-actions">
                <!-- Comment button with comment icon -->
                <button title="Comment"><i class="fa-regular fa-comment"></i></button>
                <!-- Retweet button with retweet icon -->
                <button title="Retweet"><i class="fa-solid fa-retweet"></i></button>
                <!-- Like button with heart icon -->
                <button title="Like"><i class="fa-regular fa-heart"></i></button>
              </div>
            </div>
          </section>
          <!-- Vertical line separating the main feed content from other UI elements -->
          <div class="left-vertical-line"></div>
        </main>
      </div>
    </div>
  </body>
</html>
